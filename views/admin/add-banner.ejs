<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
<body class="g-sidenav-show  bg-gray-200">
  <%- include('partials/_navbar.ejs') %>
    <%- include('partials/_asidebar.ejs') %>
      <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <div class="container-fluid py-4">
          <div class="row">
            <div class="col-12">
              <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Add Banner</h6>
                  </div>
                </div>
                <div class="card-body px-0 pb-2">
                  <form id="jd-productForm" style="padding: 3rem" action="/admin/banner/add-banner" method="POST" enctype="multipart/form-data">
                    <label for="bannerImage">Image:</label><br>
                    <input type="file" id="bannerImage" name="bannerImage" data-image-preview="#bannerImagePreview"
                    accept=".jpg,.png,.jpeg">
                    <div id="bannerImagePreview"></div>

                    <label for="firstLine">First Line:</label><br>
                    <input type="text" id="firstLine" name="firstLine"><br>
                    <label for="secondLine">Second Line:</label><br>
                    <input type="text" id="secondLine" name="secondLine"><br>
                    <label for="description">Description:</label><br>
                    <textarea id="description" name="description"></textarea><br>
                    <input type="submit" value="Add">
                    <p style="color: red;font-weight:bold"><%= locals.error %></p>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
        <%- include('partials/_footer.ejs') %>
          </div>
      </main>
      <%- include('partials/_scripts.ejs') %>
      <script>
          let fileInput = document.querySelector('[data-image-preview]');
          fileInput.addEventListener('change', () => {
            let previewDiv = document.querySelector(fileInput.dataset.imagePreview)
            previewDiv.innerHTML = ""
            const imgSrc = URL.createObjectURL(fileInput.files[0]);
            let img = document.createElement('img')
                img.src = imgSrc
                img.dataset.fileName = fileInput.files[0].name
                img.dataset.input = fileInput.id;
                previewDiv.append(img)
          })

      </script>
   
</body>

</html>