  <script>

    const datasrc = document.getElementById('datasrc');
    const weeklyData = JSON.parse(datasrc.dataset.weeklyData);
    const monthlyData = JSON.parse(datasrc.dataset.monthlyData);
    const yearlyData = JSON.parse(datasrc.dataset.yearlyData);
    
    const labels = weeklyData.map(e => e.dayOfWeek);
    const data = weeklyData.map(e => e.count);
    
    const monthLabels = monthlyData.map(e => e.month);
    const monthCount = monthlyData.map(e => e.count);

    const yearLabels = yearlyData.map(e => e.year);
    const yearCount = yearlyData.map(e => e.count);

    var ctx = document.getElementById("chart-bars").getContext("2d");

    new Chart(ctx, {
      type: "bar",
      data: {
        labels: labels,//["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        datasets: [{
          label: "Sales",
          tension: 0.4,
          borderWidth: 0,
          borderRadius: 4,
          borderSkipped: false,
          backgroundColor: "rgba(255, 255, 255, .8)",
