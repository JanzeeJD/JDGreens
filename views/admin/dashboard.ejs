  <div 
    style="display: none" id="datasrc" 
    data-weekly-data="<%= JSON.stringify(locals.weeklyData) %>"
    data-monthly-data="<%= JSON.stringify(locals.monthlyData) %>"
    data-yearly-data="<%= JSON.stringify(locals.yearlyData) %>"
  >
