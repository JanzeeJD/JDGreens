<!DOCTYPE html>
<html lang="en">

<%- include('partials/_head.ejs') %>

<body class="g-sidenav-show  bg-gray-200">
  <%- include('partials/_navbar.ejs') %>
    <%- include('partials/_asidebar.ejs') %>
      <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <div class="container-fluid py-4">
          <div class="row">
            <div class="col-12">
              <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Edit Product</h6>
                  </div>
                </div>
                <div class="card-body px-0 pb-2">
                  <form id="jd-productForm" style="padding: 3rem" action="/admin/product/add-product" method="POST" enctype="multipart/form-data">
                    <label for="productName">Product Name:</label>
                    <input type="text" id="productName" name="productName" value="<%= locals.product.name %>">
                    <label for="productDescription">Product Description:</label>
                    <textarea id="productDescription" name="productDescription"><%= locals.product.description %></textarea>
                    <label for="productCategory">Product Category:</label>
                    <select id="productCategory" name="productCategory" value="<%= locals.product.category %>">
                      <% locals.categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                      <% }) %>
                    </select>
                    <label for="productSize">Product Size:</label>
                    <select id="productSize" name="productSize" value="<%= locals.product.size %>">
                      <option value="S">S</option>
                      <option value="M">M</option>
                      <option value="XL">XL</option>
                    </select>
                    <label for="productPrice">Product Price:</label>
                    <input type="number" id="productPrice" name="productPrice" value="<%= locals.product.price %>">
                    <label for="productPrice">Product Stock:</label>
                    <input type="number" id="productStock" name="productStock" value="<%= locals.product.stock %>">
                    <label for="productImage">Product Image:</label>
                    <input type="file" id="productImage" name="productImage">
                    <!-- todo: Show images here... -->
                    <button style="margin-block: 1rem" type="submit">Add Product</button>
                    <p style="color: red;font-weight:bold"><%= locals.error %></p>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
        <%- include('partials/_footer.ejs') %>
          </div>
      </main>
   
</body>

</html>