<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Change Password</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
  <!-- Include Font Awesome for the eye icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      background-image: url("/images/banner-02.jpg");
      font-family: 'Arial', sans-serif;
    }

    .jd-password-container {
      width: min(80%, 500px);
      margin-inline: auto;
      background: rgba(255, 255, 255, 0.5);
      text-align: center;
      padding: 30px 65px;
      border-radius: 12px;
      margin-top: 2rem;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }

    .jd-password-container header {
      height: 65px;
      width: 65px;
      color: #fff;
      font-size: 2.5rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-inline: auto;
    }

    .jd-password-container button {
      border-radius: 1rem;
      padding: 0.75rem 1rem;
      border: none;
      background: #149253;
      font-weight: bold;
      margin-block: 1rem;
      cursor: pointer;
    }

    .jd-password-container .bx {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 65px;
      height: 65px;
      border-radius: 100%;
      background: green;
      margin-inline: auto;
    }

    .jd-password-container .input-field {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      gap: 0.5rem;
      position: relative;
    }

    .jd-password-container .input-field label {
      font-size: 1rem;
      font-weight: bold;
      margin-bottom: 0.25rem;
    }

    .jd-password-container .input-field input {
      height: 45px;
      width: 300px;
      border-radius: 6px;
      outline: none;
      font-size: 1rem;
      text-align: left;
      padding: 0 35px 0 10px;
      border: 1px solid rgba(14, 14, 14, 0.35);
    }

    .jd-password-container .eye-icon {
      cursor: pointer;
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 1rem;
      color: #555;
    }

    .jd-password-container .input-field input::-webkit-inner-spin-button,
    .jd-password-container .input-field input::-webkit-outer-spin-button {
      display: none;
    }
  </style>
</head>

<body>
  <div class="jd-password-container">
    <header>
      <i class="bx bxs-lock-alt"></i>
    </header>
    <h4 style="font-size: 1.5rem; margin-bottom: 1rem;">Change Password</h4>
    <form id="passwordForm" action="/change-password/<%= locals.token %>" method="POST">
      <div class="input-field">
        <label for="newPassword">New password:</label>
        <input type="password" id="newPassword" name="newPassword" placeholder="Enter New Password" />
        <span class="eye-icon" onclick="togglePasswordVisibility('newPassword')">
          <i class="fas fa-eye"></i>
        </span>
      </div>
      <div class="input-field">
        <label for="confirmPassword">Confirm password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" />
        <span class="eye-icon" onclick="togglePasswordVisibility('confirmPassword')">
          <i class="fas fa-eye"></i>
        </span>
      </div>
      <p class="error-message">
        <!-- Display error message here -->
      </p>
      <button type="submit">Change Password</button>
    </form>
  </div>

  <script>
    function togglePasswordVisibility(inputId) {
      const passwordInput = document.getElementById(inputId);
      passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
    }
  </script>
</body>

</html>
