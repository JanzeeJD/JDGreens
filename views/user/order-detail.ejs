<!DOCTYPE html>
<html lang="en">
<!-- Basic -->

<%- include('partials/_head', { title: "Checkout" }) %>

    <body>
        <%- include('partials/_pre-header') %>
            <%- include('partials/_header', { active: 'checkout' }) %>
    </body>
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Order Details</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Order</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-box-main">
        <div class="container">
            <div class="row">
                <!-- <div class="col-sm-12 col-lg-12 mb-3"> -->
                    <!-- <div class="row"> -->

                        <div class="col-md-6 col-lg-6">
                            <div class="order-box">
                                <div class="title-left">
                                    <h3>Shipping Address</h3>
                                </div>
                                <div class="media mb-2 border-">
                                    <div class="media-body"> <%= locals.userOrder.address.houseName %>, <%= locals.userOrder.address.street %>
                                        <div class="small text-muted">Pin: <%= locals.userOrder.address.pin %> <span class="mx-2">|</span> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6">
                            <div class="order-box">
                                <div class="title-left">
                                    <h3>Order Details</h3>
                                </div>
                                <div class="d-flex">
                                    <div class="font-weight-bold">Payment Method</div>
                                    <div class="ml-auto font-weight-bold">Cash On Delivery</div>
                                </div>
                                <hr class="my-1">
                                <div class="d-flex">
                                    <h4>Status</h4>
                                    <div class="ml-auto font-weight-bold" id="orderStatusText"> <%= locals.userOrder.status %> </div>
                                </div>
                                <div class="d-flex">
                                    <div class="font-weight-bold">Amount</div>
                                    <!-- <div class="ml-auto font-weight-bold">Total</div> -->
                                </div>
                                <hr class="my-1">
                                <div class="d-flex">
                                    <h4>Sub Total</h4>
                                    <div class="ml-auto font-weight-bold"> $ <%= locals.userOrder.total %> </div>
                                </div>
                                <!-- <div class="d-flex">
                                    <h4>Discount</h4>
                                    <div class="ml-auto font-weight-bold"> $ 40 </div>
                                </div> -->
                                <hr class="my-1">
                                <!-- <div class="d-flex">
                                    <h4>Coupon Discount</h4>
                                    <div class="ml-auto font-weight-bold"> $ 10 </div>
                                </div> -->
                                <!-- <div class="d-flex">
                                    <h4>Tax</h4>
                                    <div class="ml-auto font-weight-bold"> $ 2 </div>
                                </div> -->
                                <div class="d-flex">
                                    <h4>Shipping Cost</h4>
                                    <div class="ml-auto font-weight-bold" id="shippingCost"> Free </div>
                                </div>
                                <hr>
                                <div class="d-flex gr-total">
                                    <h5>Grand Total</h5>
                                    <div class="ml-auto h5" id="grandTotal" data-price="<%= locals.userOrder.total %>"> $ <%= locals.userOrder.total %> </div>
                                </div>
                                <hr> </div>
                        </div>
                        <% if (!locals.userOrder.isCancelled) { %>
                            <div class="col-12 d-flex shopping-box"> <button id="cancelOrderBtn" data-id="<%= locals.userOrder._id %>" class="ml-auto btn hvr-hover text-white">Cancel Order</button> </div>
                        <% } %>
                    <!-- </div> -->
                <!-- </div> -->
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <div class="odr-box">
                        <div class="title-left">
                            <h3>Items</h3>
                        </div>
                        <div class="rounded p-2 bg-light">
                            <% if (locals.userOrder.items && locals.userOrder.items.length > 0) { %>
                                <% locals.userOrder.items.forEach(product => { %>                                        
                                    <div class="media mb-2 border-bottom">
                                        <div class="media-body"> <a href="/shop/<%= product.productId %>"> <%= product.productId %></a>
                                            <div class="small text-muted">Price: $<%= product.price %> <span class="mx-2">|</span> Qty: <%= product.quantity %> <span class="mx-2">|</span> Subtotal: <%= product.price * product.productQty %></div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p>No items found. Possibly an error.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <%- include('partials/_insta') %>
        <%- include('partials/_footer') %>

            <%- include('partials/_scripts') %>
                <!-- ALL PLUGINS -->
                <script src="/js/jquery.superslides.min.js"></script>
                <script src="/js/bootstrap-select.js"></script>
                <script src="/js/inewsticker.js"></script>
                <script src="/js/bootsnav.js."></script>
                <script src="/js/images-loded.min.js"></script>
                <script src="/js/isotope.min.js"></script>
                <script src="/js/owl.carousel.min.js"></script>
                <script src="/js/baguetteBox.min.js"></script>
                <script src="/js/form-validator.min.js"></script>
                <script src="/js/contact-form-script.js"></script>
                <script src="/js/custom.js"></script>
                <script>
                    const cancelOrderBtn = document.getElementById('cancelOrderBtn');
                    cancelOrderBtn.addEventListener('click', (e) => {
                    
                    fetch(`/user/orders/${e.target.dataset.id}`, {
                        method: "PATCH",
                        headers: {
                        "content-type": "application/json"
                        },
                        body: JSON.stringify({
                            status: "Cancelled",
                            isCancelled: true
                        })
                    }).then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById('orderStatusText').innerText = "Cancelled";
                            alert("Order Cancelled");
                        } else {
                            alert("An error occured.");
                            console.error(data);
                        }
                    })
                    .catch(alert);
                    })
                </script>
                
            </body>
            
            </html>